<p id="notice"><%= notice %></p>

<h1>Listing Fridays</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>Date</th>
      <th>Entry</th>
      <th>Affirmation</th>
      <th>Moon sign</th>
      <th>Theme</th>
      <th>Number 1</th>
      <th>Number 2</th>
      <th>Number 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fridays.each do |friday| %>
      <tr>
        <td><%= friday.issue_id %></td>
        <td><%= friday.date %></td>
        <td><%= friday.entry %></td>
        <td><%= friday.affirmation %></td>
        <td><%= friday.moon_sign %></td>
        <td><%= friday.theme %></td>
        <td><%= friday.number_1 %></td>
        <td><%= friday.number_2 %></td>
        <td><%= friday.number_3 %></td>
        <td><%= link_to 'Show', friday %></td>
        <td><%= link_to 'Edit', edit_friday_path(friday) %></td>
        <td><%= link_to 'Destroy', friday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

