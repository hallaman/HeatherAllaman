<p id="notice"><%= notice %></p>

<h1>Listing Sundays</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>Date</th>
      <th>Entry</th>
      <th>Affirmation</th>
      <th>Moon sign</th>
      <th>Theme</th>
      <th>Number 1</th>
      <th>Number 2</th>
      <th>Number 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sundays.each do |sunday| %>
      <tr>
        <td><%= sunday.issue_id %></td>
        <td><%= sunday.date %></td>
        <td><%= sunday.entry %></td>
        <td><%= sunday.affirmation %></td>
        <td><%= sunday.moon_sign %></td>
        <td><%= sunday.theme %></td>
        <td><%= sunday.number_1 %></td>
        <td><%= sunday.number_2 %></td>
        <td><%= sunday.number_3 %></td>
        <td><%= link_to 'Show', sunday %></td>
        <td><%= link_to 'Edit', edit_sunday_path(sunday) %></td>
        <td><%= link_to 'Destroy', sunday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

