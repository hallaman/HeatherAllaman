<div class="col-xs-12">
	<div class="container">
		<h1><%= @podcast.title %></h1>
		<br /><br />
		<div class="col-xs-12">
		<% @podcast.podcast_details.each do |reading| %>
			<% if @podcast.podcast_details.count == 1 %>
				<p> <%= link_to "Click here to listen", reading.link, target: "_blank" %></p>
			<% else %> 
				<% if reading.entry.blank? %>
					<div class="col-xs-6 col-sm-3 col-md-2">
						<%= link_to reading.title, reading.link %></div>
				<% else %>
					<div class="col-xs-6 col-sm-3 col-md-2">
						<%= link_to (image_tag reading.title.downcase.squish + ".jpg", class: 'zodiac'), moonvibeguide_view_reading_path(reading) %>
					</div>
				<% end %>
			<% end %>
		<% end %>
		</div>
	</div>
</div>