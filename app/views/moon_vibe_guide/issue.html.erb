<div class="col-xs-12 current_issue right-align" style="background-image: url('<%= @issue.main_image.url %>');">
	<div class="vert-center container">
		<div class="col-xs-12">
			<div class="pull-right">
				<h4>MOON VIBE GUIDE</h4>
				<p class="bold-gold">Issue <%= @issue.issue_number %></p>
				<h1><%= @issue.week %></h1>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<nav id="guide_navigation" class="navbar navbar-default navbar-static-top" role="navigation">
	    <div class="container">
	        <div class="navbar-header">
	            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	                <span class="sr-only">Toggle navigation</span>
	                <span class="icon-bar"></span>
	                <span class="icon-bar"></span>
	                <span class="icon-bar"></span>
	            </button>
	        </div>

	        <!-- Collect the nav links, forms, and other content for toggling -->
	        <div class="col-xs-12 collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	            <ul class="nav navbar-nav">
	                <li><a href="#monday">Monday</a></li>
	                <li><a href="#tuesday">Tuesday</a></li>
	                <li><a href="#wednesday">Wednesday</a></li>
	                <li><a href="#thursday">Thursday</a></li>
	                <li><a href="#friday">Friday</a></li>
	                <li><a href="#saturday">Saturday</a></li>
	                <li><a href="#sunday">Sunday</a></li>
	                <li role="separator" class="divider"></li>
	                <span class="visible-xs">
		                <% @issue.sidebars.each do |item| %>
											<% if item.link.blank? %>
												<li><%= link_to item.title, moonvibeguide_reading_path(item.podcast_link_id) %></li>
											<% else %>
												<li><%= link_to item.title, item.link, target: '_blank' %></li>
											<% end %>
										<% end %>
									</span>
	            </ul>
	        </div>
	    </div>
	</nav>

	<div id="sidebar" class="visible-sm visible-md visible-lg col-sm-3 col-md-3 col-lg-2 col-xl-1 pull-left">
		<% @issue.sidebars.each do |item| %>
			
			<% if item.link.blank? %>
					<%= link_to moonvibeguide_reading_path(item.podcast_link_id), class: 'moon-btn pull-left' do %>
						<span><%= item.title %></span>
					<% end %>
			<% else %>
				<%= link_to item.link, target: '_blank', class: 'moon-btn pull-left' do %>
					<span><%= item.title %></span>
