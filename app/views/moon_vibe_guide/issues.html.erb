<div class="col-xs-12">
	<p>Current Issue</p>
	<p>Issue <%= @current.issue_number %></p>
	<h3><%= @current.week %></h3>
	<%= link_to "Read Now", moonvibeguide_issue_path(@current) %>
</div>


<div class="col-xs-12 col-sm-6">
	<% @past.each do |issue| %>
		<div class="col-xs-12">
			<%= link_to image_tag(issue.main_image.url(:thumb), :alt => issue.issue_number, :class => "issue-img"), moonvibeguide_issue_path(issue) %>
			<p>Issue <%= issue.issue_number %></p>
			<p><%= issue.week %></p>
			<% issue.sidebars.each do |item| %>
				<p><%= item.title %></p>
			<% end %>
			<%= link_to "Read Now", moonvibeguide_issue_path(issue), class: 'btn btn-default' %>
		</div>
	<% end %>
</div>

<div class="col-xs-12 col-sm-6">
	<% @podcasts.each do |podcast| %>
		<div class="col-xs-12">
			<%= link_to image_tag(podcast.main_image.url(:thumb), :alt => podcast.title, :class => "issue-img"), moonvibeguide_issue_path(podcast) %>
			<p>Podcast</p>
			<h3><%= podcast.title %></h3>
			<p><%= podcast.description %></p>
			<%= link_to "Read Now", moonvibeguide_issue_path(podcast), class: 'btn btn-default' %>
		</div>
	<% end %>
</div>