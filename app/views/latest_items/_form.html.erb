<%= simple_form_for(@latest_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :link %>
    <%= f.input :show %>
    <%= f.input :button_text %>

    <div class="field">
      <%= f.file_field :image %>
      <%= image_tag @latest_item.image.url(:thumb) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<br />
