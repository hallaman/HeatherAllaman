<p id="notice"><%= notice %></p>

<h1>Listing Mondays</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>Date</th>
      <th>Entry</th>
      <th>Affirmation</th>
      <th>Moon sign</th>
      <th>Theme</th>
      <th>Number 1</th>
      <th>Number 2</th>
      <th>Number 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mondays.each do |monday| %>
      <tr>
        <td><%= monday.issue_id %></td>
        <td><%= monday.date %></td>
        <td><%= monday.entry %></td>
        <td><%= monday.affirmation %></td>
        <td><%= monday.moon_sign %></td>
        <td><%= monday.theme %></td>
        <td><%= monday.number_1 %></td>
        <td><%= monday.number_2 %></td>
        <td><%= monday.number_3 %></td>
        <td><%= link_to 'Show', monday %></td>
        <td><%= link_to 'Edit', edit_monday_path(monday) %></td>
        <td><%= link_to 'Destroy', monday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Monday', new_monday_path %>
