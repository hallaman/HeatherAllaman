<p id="notice"><%= notice %></p>

<h1>Listing Wednesdays</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>Date</th>
      <th>Entry</th>
      <th>Affirmation</th>
      <th>Moon sign</th>
      <th>Theme</th>
      <th>Number 1</th>
      <th>Number 2</th>
      <th>Number 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wednesdays.each do |wednesday| %>
      <tr>
        <td><%= wednesday.issue_id %></td>
        <td><%= wednesday.date %></td>
        <td><%= wednesday.entry %></td>
        <td><%= wednesday.affirmation %></td>
        <td><%= wednesday.moon_sign %></td>
        <td><%= wednesday.theme %></td>
        <td><%= wednesday.number_1 %></td>
        <td><%= wednesday.number_2 %></td>
        <td><%= wednesday.number_3 %></td>
        <td><%= link_to 'Show', wednesday %></td>
        <td><%= link_to 'Edit', edit_wednesday_path(wednesday) %></td>
        <td><%= link_to 'Destroy', wednesday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

