<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Issue number</th>
      <th>Week</th>
      <th>Main image</th>
      <th>Moon phase</th>
      <th>Welcome</th>
      <th>Sidebar</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Sunday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.issue_number %></td>
        <td><%= issue.week %></td>
        <td><%= issue.main_image %></td>
        <td><%= issue.moon_phase %></td>
        <td><%= issue.welcome %></td>
        <td><% issue.sidebars.each do |sidebar_item| %>
              <%= sidebar_item.title %>
            <% end %>
        </td>
        <td><%= issue.monday_id %></td>
        <td><%= issue.tuesday_id %></td>
        <td><%= issue.wednesday_id %></td>
        <td><%= issue.thursday_id %></td>
        <td><%= issue.friday_id %></td>
        <td><%= issue.saturday_id %></td>
        <td><%= issue.sunday_id %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

