<p id="notice"><%= notice %></p>

<h1>Listing Thursdays</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>Date</th>
      <th>Entry</th>
      <th>Affirmation</th>
      <th>Moon sign</th>
      <th>Theme</th>
      <th>Number 1</th>
      <th>Number 2</th>
      <th>Number 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @thursdays.each do |thursday| %>
      <tr>
        <td><%= thursday.issue_id %></td>
        <td><%= thursday.date %></td>
        <td><%= thursday.entry %></td>
        <td><%= thursday.affirmation %></td>
        <td><%= thursday.moon_sign %></td>
        <td><%= thursday.theme %></td>
        <td><%= thursday.number_1 %></td>
        <td><%= thursday.number_2 %></td>
        <td><%= thursday.number_3 %></td>
        <td><%= link_to 'Show', thursday %></td>
        <td><%= link_to 'Edit', edit_thursday_path(thursday) %></td>
        <td><%= link_to 'Destroy', thursday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

