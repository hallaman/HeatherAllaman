<p id="notice"><%= notice %></p>

<h1>Listing Media</h1>

<%= link_to 'New Medium', new_medium_path, class: 'btn btn-default' %>


<table class="table">
  <thead>
    <tr>
      <th>Link</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr>
        <td><%= link_to image_path(@media), target: '_blank' %></td>
        <td><%= medium.title %></td>

        <td><%= link_to 'Show', medium %></td>
        <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
        <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

