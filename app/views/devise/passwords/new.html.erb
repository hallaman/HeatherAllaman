<div class="container">
  <div class="row center-content">

		<div class="col-xs-12 col-sm-5">
		  <h2 class="text-center">Forgot your password?</h2>

		  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>

		    <%= f.input :email, autofocus: true, placeholder: 'your@email.com', label: 'Email' %>

		    <div class="actions text-center">
		    <%= f.submit "Send me reset password instructions", class: 'btn btn-default' %>
		  </div>
		  <% end %>

		</div>
	</div>
</div>