<div class="container">
  <h2>Listing Home Page</h2>
  <hr />

  <h4 class="bold-gold text-center">Current Newsbar</h4>

  <table class="table">
    <thead>
      <tr>
        <th>Message</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= newsbar.message.html_safe %></td>
        <td><%= link_to 'Edit', edit_newsbar_path(newsbar) %></td>
        <td><%= link_to 'Delete', newsbar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
  </table>

  <p class="text-center">
    <%= link_to 'New Newsbar', new_newsbar_path, class: 'btn btn-default' %>
    <%= link_to 'View All', newsbars_path, class: 'btn btn-success' %>
  </p>
</div>