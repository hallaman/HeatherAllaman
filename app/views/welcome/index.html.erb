<div class="welcome">
	<div id="home_header" class="col-xs-12">
		<div class="vert-center container">
			<div class="col-xs-12">
			</div>
		</div>
	</div>
	<div class="col-xs-12">
		<div class="container">
			<div class="row manifesto">
				<h4 class="text-center">A PLACE FOR THE RAINBOW TRIBE</h4>
				<h4 class="text-center">WHO ARE WAKING UP</h4>
				<h4 class="text-center">AND ALIGNING</h4>
				<h4 class="text-center">TO THE AGE OF AQUARIUS</h4>
				<h4 class="text-center">TO BRING LOVE AND HEALING TO THE PLANET</h4>

				<p class="text-center"><%= image_tag('top_symbol.png', width: 100) %></p>

			</div>
		</div>
	</div>
	<div class="purple-bg moonplanner">
		<div class="col-xs-12">
			<div class="container">
				<div class="row">
					<div class="moonplanner">
						<div class="col-xs-12 col-sm-6">
							<div class="thumbnail">
								<%= link_to image_tag('moonplanner.png'), "" %>
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<h4>MOON PLANNER <br /> 2017</h4>
							<p>Aquarius Nation &amp; Star Mandalas Bringing you a 2017 energetic forecast</p>
							<%= link_to "READ MORE", "", class: "btn btn-default an-btn" %>
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-xs-12">
		<div class="container">
			<div class="row text-center daily">
				<%= image_tag('daily_readings_symbol.png', width: 100) %>

	    	<h2>DAILY MOON VIBE READING</h2>
	    	<h4><span class="emph-day"><%= Date.today.strftime('%A') %></span><%= Date.today.strftime('%-d %B %Y') %></h4>

				<% 
		  		if @daily_reading_text.present? 
		  		  @daily_reading_text = strip_tags(@daily_reading.body).truncate_words(193).split(".").in_groups(2)

			      @daily_para_1 = @daily_reading_text[0].join(' ').to_s 
			      @daily_para_2 = @daily_reading_text[1].join(' ').to_s
			    end
			  %>

				<div class="entry col-xs-12 col-md-6 text-left">
					<%= @daily_para_1.to_s + '.' if @daily_para_1.present? %>
				</div>

				<div class="entry col-xs-12 col-md-6 text-left">
					<%= @daily_para_2.to_s + '...' if @daily_para_2.present? %>
				</div>

			</div>
		</div>
	</div>
	<%= link_to image_tag('read_more.png'), post_path(daily), class: 'readmore' %>

	<div class="purple-bg moonvibetribe">
		<div class="col-xs-12">
			<div class="container">
				<div class="row">
					<h2>Moon Vibe Tribe stuff<h2>
				</div>
			</div>
		</div>
	</div>

	<div class="col-xs-12">
		<div class="container">
			<div class="row about">
				<h2>About stuff</h2>
			</div>
		</div>
	</div>

	<div class="purple-bg ">
		<div class="col-xs-12">
			<div class="container">
				<div class="row">
					<div class="birthchart">	
						<div class="col-xs-12 col-sm-6">
							<div class="thumbnail">
								<%= link_to image_tag('birthchart.png'), "http://eepurl.com/crMxQL" %>
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<h4>BIRTH CHART BOOKS</h4>
							<p>sign up below to be notified when birth chart books commence again.</p>
							<%= link_to "SIGN UP", "http://eepurl.com/crMxQL", class: "btn btn-default an-btn" %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-xs-12">
		<div class="container">
			<div class="row text-center latestvideo">
				<h4>WATCH THE LATEST ENERGY UPDATE</h4>

				<div class="videoholder">
					<div class="videoborder">
						<div class="embed-responsive embed-responsive-4by3">
						  <%= @video.embed_code.html_safe if @video.present? %>
						</div>
					</div>				
				</div>

				<a href="https://www.youtube.com/user/aquariusnation1111" target="_blank">For more video readings, follow <br />KV's YouTube channel <i class="fa fa-youtube-play" aria-hidden="true"></i></a>
			</div>
		</div>
	</div>

	<div class="purple-bg">
		<div class="col-xs-12">
			<div class="container">
				<div class="row">
					<div class="apothecary">
						<div class="col-xs-12 col-sm-6">
							<h4>AQUARIUS NATION APOTHECARY</h4>
							<p>Highest Quality Ingredients ALWAYS Made with LOVE &amp; Healing Intentions in Santa Fe, New Mexico by ROSIE RENARD</p>
							<%= link_to "SHOP NOW", "http://www.shopify.com", class: "btn btn-default an-btn" %>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="thumbnail">
								<%= link_to image_tag('apothecary.png'), "http://www.shopify.com" %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-xs-12">
		<div class="container">
			<div class="row text-center latestitems">
				<h3>LATEST FROM AQUARIUS NATION</h3>
				<div class="container">
					<% @latest_items.each do |latest_item| 
						@button = !latest_item.button_text.blank? ? latest_item.button_text : 'READ MORE'
					%>
						<div class="col-xs-12 col-sm-4">
							<%= link_to image_tag(latest_item.image.url(:thumb)), latest_item.link, class: 'shop-img' %>
							<h4><%= link_to latest_item.title, latest_item.link, class: 'shop-title' %></h4>
							<%= link_to @button, latest_item.link, class: 'btn btn-default an-btn' %>
						</div>

					<% end %>
				</div>

				<div class="row text-center insta">
					<h5>CONNECT WITH AQ</h5>
					<div class="container">
						<% @insta.take(4).each do |insta| %>
						  <div class="col-xs-6 col-sm-3">
						    <div class="thumbnail">
						      <a href="<%= insta.link %>" target="_blank">
						      	<%= image_tag insta.images.thumbnail.url %>
						      </a>
						    </div>
						  </div>
						<% end %>

						<div class="connect">
							<a href="https://www.facebook.com/aquariusnationastrology" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>
							<a href="https://www.youtube.com/user/aquariusnation1111" target="_blank"><i class="fa fa-youtube-play" aria-hidden="true"></i></a>
							<a href="https://www.instagram.com/aquariusnation/?hl=en" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a>
							<a href="https://plus.google.com/118294992650915534853" target="_blank"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="purple-bg">
		<div class="col-xs-12">
			<div class="container">
				<p>&nbsp;</p>
				<p>&nbsp;</p>
				<p>&nbsp;</p>
			</div>
		</div>
	</div>

	<div class="col-xs-12">
		<div class="container">
			<div class="row text-center testimonials">
				<div id="myCarousel" class="carousel slide" data-ride="carousel">
						<!-- Indicators -->
					  <ol class="carousel-indicators">
					  	<% @testimonials.each_with_index do |testimonial, index| %>
					  		<% if index == 0 %>
					        <li data-target="#myCarousel" data-slide-to="<%= index %>" class="active"></li>
					     	<% else %>
									<li data-target="#myCarousel" data-slide-to="<%= index %>"></li>
					     	<% end %>
					    <% end %>
					  </ol>

				  <!-- Wrapper for slides -->
				  <div class="carousel-inner" role="listbox">
				  	 <% @testimonials.each_with_index do |testimonial, index| %>

				  	 	<% if index == 0 %>
			          <div class="item active">
			       	<% else %>
								<div class="item">
			       	<% end %>
			          	
			          	<% if testimonial.image.present? %>
			          		<div class="hidden-xs col-sm-3">
			          			<div class="thumbnail">
			           				<%= image_tag(testimonial.image.url(:thumb), class: 'testimonial-img') %>
			           			</div>
			           		</div>
			           		<div class="col-xs-12 col-sm-9">
			           			<h3><%= testimonial.title %></h3>
			          			<%= testimonial.body.html_safe %>
			          		</div>
			          	<% else %>
										<div class="col-xs-12">
											<h3><%= testimonial.title %></h3>
			          			<%= testimonial.body.html_safe %>
			          		</div>
			          	<% end %>
			          </div>
			      <% end %>
			     
				  </div>


				</div>
			</div>
		</div>
	</div>
</div>
